CREATE TABLE LOGIN (USER_ID NUMBER(5) PRIMARY KEY,
                    USER_TYPE NUMBER(1) NOT NULL,
                    PASSWORD VARCHAR2(10) NOT NULL
   );
   commit;
   
   CREATE TABLE MODIFIED_ITEM_LIST(
    I_ID VARCHAR2(20) PRIMARY KEY,
    I_NAME VARCHAR2(20) NOT NULL,
    I_TYPE VARCHAR2(20) NOT NULL,
    I_REORDER_LEVEL NUMBER(6) NOT NULL,
    I_BRAND VARCHAR2(20),
    I_DES VARCHAR2(100),
    I_COST_PRICE NUMBER(6) NOT NULL,
    I_PRICE NUMBER(8) NOT NULL,
    I_BATCH NUMBER(10) NOT NULL,
    I_DISCOUNT NUMBER(3),
    I_RET_DAY NUMBER NOT NULL,
    I_STOCK NUMBER(6) NOT NULL
  );
  commit;
  
  CREATE TABLE MODIFIED_SALES(
 s_ID VARCHAR2(20) REFERENCES MODIFIED_ITEM_LIST(I_ID) NOT NULL,
 S_PRICE NUMBER(8) NOT NULL,
 S_QTY NUMBER NOT NULL,
 S_BILL NUMBER NOT NULL,
 S_DATE_TIME date   default sysdate not null
 );
commit;

CREATE TABLE MODIFIED_REFUND(
R_ID VARCHAR2(10) REFERENCES MODIFIED_ITEM_LIST(I_ID) NOT NULL,
R_PRICE NUMBER(8) NOT NULL,
R_DATE DATE DEFAULT SYSDATE NOT NULL,
R_BILL NUMBER NOT NULL,
R_QTY NUMBER(6) NOT NULL
);
commit;
